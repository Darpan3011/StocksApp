@model List<PDFModel>
@{
    Layout = null;
}
<link href="@("http://" + Context.Request.Host.ToString() + "/StyleSheet.css")" rel="stylesheet" />

<h3>Orders</h3>
@if (Model != null && Model.Count > 0)
{
    <table class="order-table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Stock Name</th>
                <th>Order Type</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Trade Amount</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.DateAndTimeOfOrder.ToString("dd MMMM yyyy hh:mm tt")</td>
                    <td>@order.StockName (@order.StockSymbol)</td>
                    <td>@order.OrderType</td>
                    <td>@order.Quantity</td>
                    <td>$ @order.Price</td>
                    <td>$ @order.TradeAmount</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No orders found.</p>
}